<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.FinDePartieController">
	<children>
		<ImageView fitHeight="400.0" fitWidth="600.0">
			<image>
				<Image url="@../images/hogwarts_express.jpg" />
			</image>
		</ImageView>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="35.0">
         <children>
            <Label fx:id="text" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Etat de la partie">
               <font>
                  <Font size="36.0" />
               </font>
               <VBox.margin>
                  <Insets top="65.0" />
               </VBox.margin>
            </Label>
      		<VBox alignment="CENTER" maxWidth="120.0" spacing="20.0">
      			<children>
      				<Button maxWidth="1.7976931348623157E308" onMousePressed="#newGame" text="Nouvelle partie">
      					<font>
      						<Font size="15.0" />
      					</font>
      				</Button>
      				<Button maxWidth="1.7976931348623157E308" onMousePressed="#menu" text="Menu principal">
      					<font>
      						<Font size="15.0" />
      					</font>
      				</Button>
      				<Button maxWidth="1.7976931348623157E308" onMousePressed="#exit" text="Quitter">
      					<font>
      						<Font size="15.0" />
      					</font>
      				</Button>
      			</children>
      		</VBox>
         </children>
      </VBox>
	</children>
</StackPane>
